<h1>New Game</h1>
<div class="container">
  <div class="row" id="letters">
    <% @letters.each do |letter| %>
    <div class="col-sm"><div class="col-sm" style="margin: 8px; padding; 8px;"><%= letter %></div></div>
    <% end %>
  </div>
</div>


<form action="/score" method="post" data-turbo="false">
  <!-- ... -->
  <%= hidden_field_tag 'letters', @letters %>
  <input type="text" name="word" placeholder="Type a Word">
  <input type="submit">
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
</form>
